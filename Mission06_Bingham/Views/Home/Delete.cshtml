@model Movie

<h2>Confirm Deletion</h2>
<h3>@Model.Title, @Model.Year</h3>

<form method="post">
    <input type="hidden" asp-for="@Model.MovieId" />

    <button type="submit" class="btn btn-danger btn-sm">Delete</button>

    <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="WaitList">Cancel</a>
</form>
